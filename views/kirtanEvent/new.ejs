<% include ../partials/header %>

<div class="ui main text container segment">
        <div class="ui huge header">New Kirtan Event</div>
        <form class="ui form" action="/kirtanEvents" method="POST">
            <div class="field">
                <label>Title</label>
                <input type="text" name="Kirtan[kirtanName]" placeholder="name">
            </div>
            <div class="field">
                    <label>Add details</label>
                    <textarea name="Kirtan[description]" placeholder="description"></textarea>
            </div>
            <div class="field">
                    <label>Address</label>
                    <input type="text" name="Kirtan[location]" placeholder="location">
            </div>
            <div class="field">
                    <input type="checkbox" name="Kirtan[PrivateEvent]"> This is a private Event</input>
            </div>
            <input class="btn btn-success" style="width: 100%;" type="submit"> 
        </form>
        <a class="btn btn-danger" style="float:right; width:100%; margin-top: 10px;" href="/kirtanEvents">Cancel</a>
</div>


