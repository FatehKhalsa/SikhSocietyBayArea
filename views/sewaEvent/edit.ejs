<% include ../partials/header %>

<div class="ui main text container segment">
        <div class="ui huge header">Edit Sewa Event</div>
        <form class="ui form" action="/sewaEvents/<%= SewaEvent._id %>/delete?_method=DELETE" method="POST" style="padding-bottom: 5%;">
                <button class="btn btn-danger" style="float: right;">Delete</button>
        </form>
        <form class="ui form" action="/sewaEvents/<%= SewaEvent._id %>/edit?_method=PUT" method="POST">
            <div class="field">
                <label>Title</label>
                <input type="text" name="SewaEvent[sewaName]" value="<%= SewaEvent.sewaName %>" required>
            </div>
            <div class="field">
                    <label>Add details</label>
                    <input name="SewaEvent[description]" value="<%= SewaEvent.description %>" required></input>
            </div>
            <div class="field">
                    <label>Address</label>
                    <input type="text" name="SewaEvent[location]" value="<%= SewaEvent.location %>" required>
            </div>
            <div class="field">
                    <label>Items needed</label>
                    <input type="text" name="SewaEvent[itemsNeeded]"  value="<%= SewaEvent.itemsNeeded %>">
            </div>
            <div class="field">
                    <label>Volunteers needed</label>
                    <input type="text" name="SewaEvent[VolunteerNeeded]" value="<%= SewaEvent.VolunteerNeeded %>" required="true">
            </div>
            <% if(SewaEvent.PrivateEvent == 'on') { %>
            <div class="field">
                        <input type="checkbox" value="<%= SewaEvent.PublicEvent %>" name="SewaEvent[PublicEvent]"> Make this public event?</input>
            </div>
            <% } else {%> 
             <div class="field">
                        <input type="checkbox" value="<%= SewaEvent.PrivateEvent %>" name="SewaEvent[PrivateEvent]"> Make this private event?</input>
             </div>
            <% } %>   
            <p class="EventSelector">
                        <input class="btn btn-success btn-large" style="width:45%;" type="submit"></a>
                        <a class="btn btn-warning btn-large" style="margin-left: 63px; width:45%;" href="/sewaEvents">Cancel</a>
            </p>
        </form>
</div>


    <% include ../partials/footer %>  