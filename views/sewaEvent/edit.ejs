<% include ../partials/header %>

<div class="ui main text container segment">
        <div class="ui huge header">Edit Sewa Event</div>
        <form class="ui form" action="/sewaEvents/<%= SewaEvent._id %>/edit?_method=PUT" method="POST">
            <div class="field">
                <label>Title</label>
                <input type="text" name="Sewa[sewaName]" value="<%= Sewa.sewaName %>" required>
            </div>
            <div class="field">
                    <label>Add details</label>
                    <textarea name="Sewa[description]" value="<%= Sewa.description %>" required></textarea>
            </div>
            <div class="field">
                    <label>Address</label>
                    <input type="text" name="Sewa[location]" value="<%= Sewa.location %>" required>
            </div>
            <div class="field">
                    <label>Items needed</label>
                    <input type="text" name="Sewa[itemsNeeded]"  value="<%= Sewa.itemsNeeded %>">
            </div>
            <div class="field">
                    <label>Volunteers needed</label>
                    <input type="text" name="Sewa[VolunteerNeeded]" value="<%= Sewa.VolunteerNeeded %>" required="true">
            </div>
            <input class="btn btn-success" style="width: 100%;" type="submit"> 
        </form>
        <a class="btn btn-danger" style="width: 100%; margin-top: 10px;" href="/sewaEvents">Cancel</a>
</div>


    <% include ../partials/footer %>  